<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    >

    <com.google.android.gms.common.SignInButton
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:id="@+id/frag_google_login_btn"

        android:layout_centerInParent="true"></com.google.android.gms.common.SignInButton>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/frag_google_login_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:textSize="16sp"
        android:typeface="sans"
        android:text="It is highly recommended to Sign in"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:textSize="18sp"
        android:typeface="sans"
        android:id="@+id/frag_gmail_continue"
        android:layout_centerHorizontal="true"
        android:text="Continue without Sign In"
        />


</RelativeLayout>