<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lock_overlay_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/jetblack"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/main_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="fill" />

    <ImageView
        android:id="@+id/lock_overlay_normal_icon"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:scaleType="fitXY"
        android:src="@drawable/lock_icon" />

    <include
        android:id="@+id/pasw_entry_text"
        layout="@layout/pasw_entry_text_layout" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lock_button_table"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <include
            android:id="@+id/normal_button_table_tl"
            layout="@layout/normal_button_table"
            />


    </FrameLayout>


</RelativeLayout>