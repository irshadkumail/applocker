<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:gravity="bottom"
    android:background="@color/teal">
    <RelativeLayout
        android:id="@+id/rl_header_view"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_user_profile_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/demo" />
        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_user_profile_pic"
            android:layout_toEndOf="@+id/iv_user_profile_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Irshad Kumail"
                android:id="@+id/tv_user_display_name"
                android:singleLine="true"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="irshadkumail@gmail.com"
                android:id="@+id/tv_user_email"
                android:paddingLeft="10dp"
                android:textColor="@color/white"
                android:singleLine="true"

                android:layout_below="@+id/tv_user_display_name" />
        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/transparent_grey"/>

</FrameLayout>
